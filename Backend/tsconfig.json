{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "outDir": "./build",
      "target": "es2017",
      "module": "CommonJS",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true
   },
   "include": ["src/**/*"],        // Specify files or patterns to include
   "exclude": ["node_modules"]     // Exclude specified files or patterns 
}